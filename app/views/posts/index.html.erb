
      <%= link_to 'Создать запись', new_post_path, class: "btn btn-default btn-lg btn-block" %> 


    <% @posts.each do |post| %>
              <h3><b><%= post.title %></b> </h3> 


<div class="container">
      <div class="row">
        <div class="col-sm-3 header">
          <%= image_tag post.image.url(:thumb), class: 'img-thumbnail thumb' if post.image? %> 
        </div>
 
        <div class="col-sm-9 col2">
<p class="text-primary">
                  <button type="button" class="btn btn-info"><%= link_to ' Показать', post  %></button>
                  <button type="button" class="btn btn-info">
                  <%= link_to ' Редактировать', edit_post_path(post) %> </button>


 Автор: <%= post.user.email %> |
 <%= post.created_at.to_date.strftime("%d %B, %Y") %> </time>

 <br/>
 </p>
 <br/>  
 <p class="text-justify">     
<%= post.content %>
</p>
        </div>
      </div>
    </div>







      <% end %>
      <p class="text-justify">
      <%= will_paginate @posts %>
</p>

  </article>
