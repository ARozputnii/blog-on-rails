<p id="notice"><%= notice %></p>
<%= link_to 'Создать запись', new_post_path, class: "btn btn-success btn-lg" %>
<h2>Записи</h2> <br />
    <% @posts.each do |post| %>

<table>
  <tbody>
      <tr>
    
        <h4><b><%= post.title %></b> </h4>
        <%= image_tag post.image.url(:thumb), class: 'img-thumbnail' if post.image? %> 
     <br />
     <br />
     <br />
        <%= link_to ' Показать', post , class: "btn btn-default btn-sm" %>
        <%= link_to ' Редактировать', edit_post_path(post) , class: "btn btn-default btn-sm" %>
        <%= link_to ' Удалить', post, method: :delete, data: { confirm: 'Вы уверены?' } , class: "btn btn-default btn-sm"%> <br />

        <div class="container">
          <div align="">
            <smail>
                Автор: <%= post.user.email %> |
              <time> <%= post.created_at.to_date.strftime("%d %B, %Y") %> </time>
              <br />
            </smail>
          </div>
        </div>

      </tr>
        ___________________________________
        <br />
        <br />
        <br />
    <% end %>
  </tbody>
</table>

