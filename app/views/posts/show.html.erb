
<article class="post">
	<section class="post-head">
		<div class="col-xs-2"></div>
  		<div class="col-xs-10">
				<h1> <%= @post.title %> </h1>
			</div>
		
	</section>
		<section>
		 <div class="col-xs-1"></div>
		  <div class="col-xs-11">
				<%= image_tag @post.image.url(:large), class: 'img-show' if @post.image? %>
			</div> 
		<br />
		<br />
		<div class="container">
      <div align="justify">
		 		<%= @post.content %>
			</div>
		</div>
		 <small>
		 	<div class="container">
      	<div align="right">
		 			<p> Автор: <%= @post.user.email %> </p>
					<time> <%= @post.created_at.to_date.strftime("%d %B, %Y") %> </time>
					<br />
				</div>
			</div>
			<br />
			<div class="container">
       <div class="row">
  			<div class="col-xs-4"></div>
  				<div class="col-xs-8">
						<%= link_to 'Редактировать', edit_post_path(@post), class: "btn btn-default" %> 
			
						<%= link_to ' Удалить', post_path(@post), method: :delete, data: { confirm: 'Вы уверены?' } , class: "btn btn-default"%>
			
						<%= link_to 'Назад', posts_path ,class: "btn btn-default"%>
					</div>
				</div>
			</div>
		</small>
	</section>
</article>
<%= render 'disqus' %>